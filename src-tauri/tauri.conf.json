{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "musa",
	"version": "0.1.0",
	"identifier": "com.kypator.musa",
	"build": {
		"beforeDevCommand": "yarn dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "yarn build",
		"frontendDist": "../dist",
		"removeUnusedCommands": true
	},
	"app": {
		"windows": [
			{
				"title": "Musa",
				"width": 800,
				"height": 600,
				"decorations": false,
				"theme": "Dark"
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
